package com.study.springboot.dao;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.BeanPropertyRowMapper;
import org.springframework.jdbc.core.JdbcTemplate;

import com.study.springboot.dto.SimpleBbsDto;

public class SimpleBbsDao implements ISimpleBbsDao {
    @Autowired
    JdbcTemplate template;

    @Override
    public List<SimpleBbsDto> listDto() {
        System.out.println("listDao()");

        String query = "select * from simple_bbs order by id desc";
        List<SimpleBbsDto> dtos = template.query(
                query, new BeanPropertyRowMapper<>(SimpleBbsDto.class));
        return dtos;
    }

    @Override
    public SimpleBbsDto viewDao(String id) {
        System.out.println("viewDao()");

        String query = "select * from simple_bbs where id=" + id;
        SimpleBbsDto dto = template.queryForObject(query, new BeanPropertyRowMapper<>(SimpleBbsDto.class));
        return dto;
    }

    public void writeDao(final String writer, final String title, final String content) {
        System.out.println("writeDao()");

        String query = "insert into simple_bbs (id, writer, title, content) values(simple_bbs_seq.nextval, ?, ?, ?)";
        template.update(query, writer, title, content);
    }

    public int deleteDao(final String id) {
        System.out.println("deleteDao()");

        String query = "delete from simple_bbs where id = ?";
        return template.update(query, Integer.parseInt(id));
    }


}